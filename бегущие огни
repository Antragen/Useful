#include <xc.h>
#define _XTAL_FREQ 4000000

// CONFIG
#pragma config FOSC = HS        // Oscillator Selection bits (HS oscillator)
#pragma config WDTE = OFF       // Watchdog Timer (WDT disabled)
#pragma config PWRTE = ON      // Power-up Timer Enable bit (Power-up Timer is disabled)
#pragma config CP = OFF         // Code Protection bit (Code protection disabled)

void main(void) {
        TRISB = 0x00;
        PORTB = 0x00;
        TRISA &= ~0x03;
        PORTA &= ~0x03; 
    while(1)
    {
        PORTAbits.RA1 = 1;
        PORTBbits.RB0 = 0;
        __delay_ms(100); 
        PORTBbits.RB0 = 1;
        PORTBbits.RB1 = 0;
        __delay_ms(100);
        PORTBbits.RB1 = 1;
        PORTBbits.RB2 = 0;
        __delay_ms(100);
        PORTBbits.RB2 = 1;
        PORTBbits.RB3 = 0;
        __delay_ms(100);
        PORTBbits.RB3 = 1;
        PORTBbits.RB4 = 0;
        __delay_ms(100); 
        PORTBbits.RB4 = 1;
        PORTBbits.RB5 = 0;
        __delay_ms(100);
        PORTBbits.RB5 = 1;
        PORTBbits.RB6 = 0;
        __delay_ms(100);
        PORTBbits.RB6 = 1;
        PORTBbits.RB7 = 0;
        __delay_ms(100);
        PORTBbits.RB7 = 1;
        PORTAbits.RA0 = 0;
        __delay_ms(100);
        PORTAbits.RA0 = 1;
        PORTAbits.RA1 = 0;
        __delay_ms(100);
    };
    return;
}
